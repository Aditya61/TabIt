generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(cuid())
  name         String
  phone        String     @unique
  password     String // store hashed
  businessName String     @default("")
  creditors    Creditor[]
  createdAt    DateTime   @default(now())
}

model Creditor {
  id          String    @id @default(cuid())
  name        String
  phone       String
  outstanding Float     @default(0)
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  credits     Credit[]
  payments    Payment[]
  createdAt   DateTime  @default(now())
}

model Credit {
  id             String           @id @default(cuid())
  creditorId     String
  amtRemaining   Float
  amtPaid        Float            @default(0)
  status         String           @default("PENDING")
  date           DateTime         @default(now())
  items          Item[]
  creditor       Creditor         @relation(fields: [creditorId], references: [id])
  OutstandingLog OutstandingLog[]
}

model Item {
  id         String @id @default(cuid())
  creditId   String
  name       String
  quantity   Float
  totalPrice Float
  credit     Credit @relation(fields: [creditId], references: [id])
}

model Payment {
  id             String           @id @default(cuid())
  creditorId     String
  amount         Float
  method         String           @default("CASH")
  date           DateTime         @default(now())
  creditor       Creditor         @relation(fields: [creditorId], references: [id])
  OutstandingLog OutstandingLog[]
}

model OutstandingLog {
  id              String   @id @default(cuid())
  creditId        String?
  paymentId       String?
  prevOutstanding Float
  nextOutstanding Float
  credit          Credit?  @relation(fields: [creditId], references: [id])
  payment         Payment? @relation(fields: [paymentId], references: [id])
}
